{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Se connecter</h1>

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/board"/> 

        <button type="submit">Se connecter</button>
    </form>

    {# <p>Pas encore inscrit ? </p><a href="trello/templates/registration/register.html.twig">Se créer un compte</a> #}
    <p>Pas encore inscrit ? <a href="/register">Se créer un compte</a> </p>
{% endblock %}
